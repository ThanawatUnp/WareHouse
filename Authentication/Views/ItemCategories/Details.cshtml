@model Authentication.Models.ItemCategory

@{
    Layout = null;
    ViewData["Title"] = "Detail";
}

<script>
    $(function () {
        $("#detail-itemcategory input").each(function () {
            $(this).attr('readonly', 'readonly');
        });
    })
</script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<form id="detail-itemcategory"
      asp-action="Details"
      enctype="multipart/form-data"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-complete="OnCompleteRequest"
      data-ajax-failure="OnFailureRequest">
    <div class="modal create-popup" aria-hidden="true">
        <div class="modal-dialog-center">
            <div class="modal-content">
                <div class="modal-header">
                    <span>View Detail</span>
                    <button type="button" class="close btn-x-pop" data-dismiss="modal" aria-label="Close" onclick="OnCompleteRequest()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5><b>Category</b></h5>
                    <hr />
                    <div class="row row-popup">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group form-group-popup">
                                <label asp-for="category_name" class="control-label"></label>
                                <input asp-for="category_name" class="primary form-control input-popup" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="description" class="control-label"></label>
                                <input asp-for="description" class="form-control input-popup" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="active" class="control-label"></label>
                                <input class="form-control input-popup" value="@{  String sActive = "Active";
                                    if (Model.active == false)
                                    {
                                        sActive = "Non-Active";
                                    }
                                    @sActive;
                                }" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="create_by" class="control-label"></label>
                                <input asp-for="create_by" class="form-control input-popup" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="create_date" class="control-label"></label>
                                <input class="form-control input-popup" value="@{
                                    DateTime dtCreate = Convert.ToDateTime(Model.create_date);
                                    @dtCreate.ToString("dd/MM/yyyy HH:mm:ss");
                                }" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="edit_by" class="control-label"></label>
                                <input asp-for="edit_by" class="form-control input-popup" />
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="edit_date" class="control-label"></label>
                                <input class="form-control input-popup" value="@{
                                    if (Model.edit_date != null)
                                    {
                                        DateTime dtEdit = Convert.ToDateTime(Model.edit_date);
                                        @dtEdit.ToString("dd/MM/yyyy HH:mm:ss");
                                    }
                                }" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-foote-popr btn-close-pop" data-dismiss="modal" onclick="OnCompleteRequest()">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>

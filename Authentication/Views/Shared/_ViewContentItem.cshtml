<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="15">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (Item item in Model)
            {
                <tr class="tbl-row">
                    <td>
                        @i
                    </td>
                    <td>
                        <a id="detail-item" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a id="edit-item" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a id="delete-item" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td style="width: 150px;">
                        @item.item_code
                    </td>
                    <td style="width: 160px;">
                        @item.item_name
                    </td>
                    <td>
                        @{ if (@item.ItemCategory != null)
                            {
                                @item.ItemCategory.category_name
                            }
                        }
                    </td>
                    <td style="width: 150px;">
                        @item.description
                    </td>

                    <td style="width: 130px;">
                        @item.create_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            DateTime dt = Convert.ToDateTime(@item.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td style="width: 130px;">
                        @item.edit_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            if (@item.edit_date != null)
                            {
                                dt = Convert.ToDateTime(@item.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>

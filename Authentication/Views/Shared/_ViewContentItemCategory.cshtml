<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="11">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (ItemCategory itemType in Model)
            {
                <tr class="tbl-row">
                    <td style="width: 70px;">
                        @i
                    </td>
                    <td style="width: 70px;">
                        <a id="detail-itemtype" asp-action="Details" asp-route-id="@itemType.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td style="width: 70px;">
                        <a id="edit-itemtype" asp-action="Edit" asp-route-id="@itemType.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td style="width: 70px;">
                        <a id="delete-itemtype" asp-action="Delete" asp-route-id="@itemType.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td style="width: 130px;">
                        @itemType.category_name
                    </td>
                    <td style="width: 150px;">
                        @itemType.description
                    </td>
                    <td>
                        @{ String sActive = "Non-Active";
                            if (itemType.active == true)
                            {
                                sActive = "Active";
                            }
                            @sActive.ToString();
                        }
                    </td>
                    <td style="width: 130px;">
                        @itemType.create_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            DateTime dt = Convert.ToDateTime(itemType.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td style="width: 130px;">
                        @itemType.edit_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            if (@itemType.edit_date != null)
                            {
                                dt = Convert.ToDateTime(@itemType.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>

@foreach (var item in ViewBag.Header)
{
    @switch (@item)
    {
        case "Status":
            <th style="min-width: 120px;">@item</th>
            break;
        case "Expect Date":
        case "Create By":
        case "Create Date":
        case "Close By":
        case "Close Date":
        case "Edit By":
        case "Edit Date":
            <th style="min-width: 130px;">@item</th>
            break;
        case "Order Type":
        case "Order Number":
        case "Supplier":
        case "Customer":
            <th style="min-width: 160px;">@item</th>
            break;
        case "Description":
        case "Close Remark":
            <th style="min-width: 230px;">@item</th>
            break;
        default:
            <th>@item</th>
            break;
    }
}

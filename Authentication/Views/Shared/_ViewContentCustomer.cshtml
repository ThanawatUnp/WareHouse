@{
}

<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="24">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (Customer customer in Model)
            {
                <tr class="tbl-row">
                    <td>
                        @i
                    </td>
                    <td>
                        <a id="detail-customer" asp-action="Details" asp-route-id="@customer.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a id="edit-customer" asp-action="Edit" asp-route-id="@customer.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a id="delete-customer" asp-action="Delete" asp-route-id="@customer.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        @customer.customer_code
                    </td>
                    <td>
                        @customer.customer_name
                    </td>
                    <td>
                        @customer.description
                    </td>
                    <td>
                        @customer.address1
                    </td>
                    <td>
                        @customer.address2
                    </td>
                    <td>
                        @customer.address3
                    </td>
                    <td>
                        @{ if (@customer.Province != null)
                            {
                                @customer.Province.Province_Thai
                            }
                        }
                    </td>
                    <td>
                        @{ if (customer.District != null)
                            {
                                @customer.District.District_Thai
                            }

                        }
                    </td>
                    <td>
                        @{ if (customer.SubDistrict != null)
                            {
                                @customer.SubDistrict.SubDistrict_Thai
                            }
                        }
                    </td>
                    <td>
                        @customer.zipcode
                    </td>
                    <td>
                        @customer.phone_no
                    </td>
                    <td>
                        @customer.mobile_no
                    </td>
                    <td>
                        @customer.fax_no
                    </td>
                    <td>
                        @customer.email
                    </td>
                    <td>
                        @customer.contact
                    </td>
                    <td>
                        @{ String sActive = "Non-Active";
                            if (@customer.active == true)
                            {
                                sActive = "Active";
                            }
                            @sActive.ToString();
                        }
                    </td>
                    <td>
                        @customer.create_by
                    </td>
                    <td>
                        @{
                            DateTime dt = Convert.ToDateTime(@customer.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td>
                        @customer.edit_by
                    </td>
                    <td>
                        @{
                            if (@customer.edit_date != null)
                            {
                                dt = Convert.ToDateTime(@customer.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>

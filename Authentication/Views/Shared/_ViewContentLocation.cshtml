@{
}

<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="14">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (Location location in Model)
            {
                <tr class="tbl-row">
                    <td>
                        @i
                    </td>
                    <td>
                        <a id="detail-location" asp-action="Details" asp-route-id="@location.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a id="edit-location" asp-action="Edit" asp-route-id="@location.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a id="delete-location" asp-action="Delete" asp-route-id="@location.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td style="width: 150px;">
                        @location.location_code
                    </td>
                    <td>
                        @{ if (location.LocationCategory != null)
                            {
                                @location.LocationCategory.category_name
                            }
                        }
                    </td>
                    <td style="width: 150px;">
                        @location.description
                    </td>
                   
                    <td style="width: 130px;">
                        @location.create_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            DateTime dt = Convert.ToDateTime(@location.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td style="width: 130px;">
                        @location.edit_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            if (@location.edit_date != null)
                            {
                                dt = Convert.ToDateTime(@location.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>

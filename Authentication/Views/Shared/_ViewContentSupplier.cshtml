@{
}

<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="24">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (Supplier supplier in Model)
            {
                <tr class="tbl-row">
                    <td>
                        @i
                    </td>
                    <td>
                        <a id="detail-supplier" asp-action="Details" asp-route-id="@supplier.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a id="edit-supplier" asp-action="Edit" asp-route-id="@supplier.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a id="delete-supplier" asp-action="Delete" asp-route-id="@supplier.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        @supplier.supplier_code
                    </td>
                    <td>
                        @supplier.supplier_name
                    </td>
                    <td>
                        @supplier.description
                    </td>
                    <td>
                        @supplier.address1
                    </td>
                    <td>
                        @supplier.address2
                    </td>
                    <td>
                        @supplier.address3
                    </td>
                    <td>
                        @{ if (supplier.Province != null)
                            {
                                @supplier.Province.Province_Thai
                            }
                        }
                    </td>
                    <td>
                        @{ if (supplier.District != null)
                            {
                                @supplier.District.District_Thai
                            }

                        }
                    </td>
                    <td>
                        @{ if (supplier.SubDistrict != null)
                            {
                                @supplier.SubDistrict.SubDistrict_Thai
                            }
                        }
                    </td>
                    <td>
                        @supplier.zipcode
                    </td>
                    <td>
                        @supplier.phone_no
                    </td>
                    <td>
                        @supplier.mobile_no
                    </td>
                    <td>
                        @supplier.fax_no
                    </td>
                    <td>
                        @supplier.email
                    </td>
                    <td>
                        @supplier.contact
                    </td>
                    <td>
                        @{ String sActive = "Non-Active";
                            if (@supplier.active == true)
                            {
                                sActive = "Active";
                            }
                            @sActive.ToString();
                        }
                    </td>
                    <td>
                        @supplier.create_by
                    </td>
                    <td>
                        @{
                            DateTime dt = Convert.ToDateTime(@supplier.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td>
                        @supplier.edit_by
                    </td>
                    <td>
                        @{
                            if (@supplier.edit_date != null)
                            {
                                dt = Convert.ToDateTime(@supplier.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>

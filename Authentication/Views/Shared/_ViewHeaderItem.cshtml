@foreach (var item in ViewBag.Header)
{
    @switch (@item)
    {
        case "Unit":
            <th style="min-width: 90px;">@item</th>
            break;
        case "Cost":
            <th style="min-width: 110px;">@item</th>
            break;
        case "Create By":
        case "Create Date":
        case "Edit By":
        case "Edit Date":
            <th style="min-width: 130px;">@item</th>
            break;
        case "Item Category":
            <th style="min-width: 140px;">@item</th>
            break;
        case "Item Code":
        case "Description":
            <th style="min-width: 150px;">@item</th>
            break;
        case "Item Name":
        case "Export Category":
            <th style="min-width: 160px;">@item</th>
            break;
        default:
            <th>@item</th>
            break;
    }
}
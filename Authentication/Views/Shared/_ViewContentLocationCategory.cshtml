<tbody id="view-content">
    @{ int i = ViewBag.FirstRec;
        @if (Model.Count == 0)
        {
            <tr class="no-data">
                <td colspan="10">Not Found Data</td>
            </tr>
        }
        else
        {
            @foreach (LocationCategory locationType in Model)
            {
                <tr class="tbl-row">
                    <td style="width: 70px;">
                        @i
                    </td>
                    <td style="width: 70px;">
                        <a id="detail-locationtype" asp-action="Details" asp-route-id="@locationType.Id">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                    <td style="width: 70px;">
                        <a id="edit-locationtype" asp-action="Edit" asp-route-id="@locationType.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                    </td>
                    <td style="width: 70px;">
                        <a id="delete-locationtype" asp-action="Delete" asp-route-id="@locationType.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td style="width: 130px;">
                        @locationType.category_name
                    </td>
                    <td style="width: 150px;">
                        @locationType.description
                    </td>
                    <td style="width: 130px;">
                        @locationType.create_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            DateTime dt = Convert.ToDateTime(locationType.create_date);
                            @dt.ToString("dd/MM/yyyy HH:mm:ss");
                        }
                    </td>
                    <td style="width: 130px;">
                        @locationType.edit_by
                    </td>
                    <td style="width: 130px;">
                        @{
                            if (locationType.edit_date != null)
                            {
                                dt = Convert.ToDateTime(locationType.edit_date);
                                @dt.ToString("dd/MM/yyyy HH:mm:ss");
                            }
                        }
                    </td>
                </tr>
                i = i + 1;
            }
        }
    }
</tbody>
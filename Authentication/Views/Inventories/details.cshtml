@model IEnumerable<Authentication.Models.InventoryDetailViewModel>
@{
    Layout = null;
    ViewData["Title"] = "Detail";
}

<div class="modal create-popup" aria-hidden="true">
    <div class="modal-dialog-center">
        <div class="modal-content">
            <div class="modal-header">
                <span>View Detail</span>
                <button type="button" class="close btn-x-pop" data-dismiss="modal" aria-label="Close" onclick="OnCompleteRequest()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5><b>Item</b></h5>
                <hr />
                <div id="ViewInventoryData" class="mt-3" style="overflow-x:auto;">
                    <table border="1" style="margin-left: auto; margin-right: auto">
                        <thead>
                            <tr id="tr">
                                <th style="min-width: 70px;"></th>
                                <th style="min-width: 160px;">Order</th>
                                <th style="min-width: 160px;">Lot No</th>
                                <th style="min-width: 150px;">Item Code</th>
                                <th style="min-width: 180px;">Item Name</th>
                                <th style="min-width: 160px;">Category</th>
                                <th style="min-width: 110px;">Cost</th>
                                <th style="min-width: 110px;">Quantity</th>
                                <th style="min-width: 130px;">Rec. Date</th>
                                <th style="min-width: 160px;">Location Code</th>
                                <th style="min-width: 160px;">Location Name</th>
                                <th style="min-width: 110px;">Status</th>
                            </tr>
                        </thead>
                        <tbody id="view-content">
                            @{ int i = 1;
                                @if (Model.Count() == 0)
                                {
                                    <tr class="no-data">
                                        <td colspan="12">Not Found Data</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (InventoryDetailViewModel item in Model)
                                    {
                                        <tr class="tbl-row">
                                            <td>
                                                @i
                                            </td>
                                            <td style="width: 160px;">
                                                @item.orderNo
                                            </td>
                                            <td style="width: 160px;">
                                                @item.lotNo
                                            </td>
                                            <td style="width: 150px;">
                                                @item.itemCode
                                            </td>
                                            <td style="width: 160px;">
                                                @item.itemName
                                            </td>
                                            <td>
                                                @item.itemCategory
                                            </td>
                                            <td style="width: 110px;">
                                                @item.cost
                                            </td>
                                            <td style="width: 90px;">
                                                @item.unit
                                            </td>
                                            <td>
                                                @{
                                                    DateTime dt;
                                                    if (item.receiveDate != null)
                                                    {
                                                        dt = Convert.ToDateTime(item.receiveDate);
                                                        @dt.ToString("dd/MM/yyyy");
                                                    }
                                                }
                                            </td> 
                                             <td style="width: 150px;">
                                                @item.locationCode
                                            </td>
                                            <td style="width: 160px;">
                                                @item.locationName
                                            </td>
                                            <td>
                                                @item.status
                                            </td>
                                        </tr>
                                        i = i + 1;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-foote-popr btn-close-pop" data-dismiss="modal" onclick="OnCompleteRequest()">Close</button>
            </div>
        </div>
    </div>
</div>
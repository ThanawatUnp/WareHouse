@page
@model RegisterModel
@{
    Layout = null;
    ViewData["Title"] = "Create";
}
<script>
    function clearForm() {
        $('#ipUsername').val('');
        $('#ipEmail').val('');
        $('#ipPassword').val('');
        $('#ipConfirmPassword').val('');
        $('#ddlRole').val(null);
        $('#sUsername').text('');
        $('#sEmail').text('');
        $('#sPassword').text('');
        $('#sConfirmPassword').text('');
        $('#sRole').text('');        
    }
</script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<form id="create-user"
      asp-route-returnUrl="@Model.ReturnUrl"
      enctype="multipart/form-data"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-mode="replace"
      data-ajax-update="#childLayout"
      data-ajax-complete="OnCompleteRequest"
      data-ajax-confirm="Do you want to Add?"
      data-ajax-failure="OnFailureRequest">
    <div class="modal create-popup" aria-hidden="true">
        <div class="modal-dialog-center">
            <div class="modal-content">
                <div class="modal-header">
                    <span>@ViewBag.Title a new account.</span>
                    <button type="button" class="close btn-x-pop" data-dismiss="modal" aria-label="Close" onclick="OnCompleteRequest()">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5><b>User</b></h5>
                    <hr />
                    <div class="row row-popup">
                        <div class="col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group form-group-popup">
                                <label asp-for="Input.Username" class="control-label"></label>
                                <input asp-for="Input.Username" id="ipUsername" class="primary form-control input-popup" />
                                <span asp-validation-for="Input.Username" id="sUsername" class="text-danger"></span>
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="Input.Email" class="control-label"></label>
                                <input asp-for="Input.Email" id="ipEmail" class="form-control input-popup" />
                                <span asp-validation-for="Input.Email" id="sEmail" class="text-danger"></span>
                            </div>
                            @*<div class="form-group form-group-popup">
                                <label asp-for="Input.Password" class="control-label"></label>
                                <input asp-for="Input.Password" id="ipPassword" class="form-control input-popup" />
                                <span asp-validation-for="Input.Password" id="sPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group form-group-popup">
                                <label asp-for="Input.ConfirmPassword" class="control-label"></label>
                                <input asp-for="Input.ConfirmPassword" id="ipConfirmPassword" class="form-control input-popup" />
                                <span asp-validation-for="Input.ConfirmPassword" id="sConfirmPassword" class="text-danger"></span>
                            </div>*@
                            <div class="form-group form-group-popup">
                                <label asp-for="Input.Role" for="ddlRole" class="control-label"><b>Role</b></label>
                                <select asp-for="Input.Role" id="ddlRole" class="form-control input-popup">
                                    <option value="">Select</option>
                                    <option value="0">User</option>
                                    <option value="1">Admin</option>
                                    <option value="2">Supervisor</option>
                                </select>
                                <span asp-validation-for="Input.Role" id="sRole" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-footer-pop btn-save-pop">Save</button>
                    <button type="button" class="btn btn-footer-pop btn-clear-pop" onclick="clearForm()">Clear</button>
                    <button type="button" class="btn btn-foote-popr btn-close-pop" data-dismiss="modal" onclick="OnCompleteRequest()">Close</button>
                </div>
            </div>
        </div>
    </div>
</form>
